<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.japharr.swiper.VideoActivity"
    tools:showIn="@layout/activity_video">

    <com.deep.videotrimmer.DeepVideoTrimmer
        android:id="@+id/mVideoTrimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvCroppingMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/blackOverlay"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="@string/str_cropping_video_please_wait"
        android:textStyle="bold"/>

</LinearLayout>
